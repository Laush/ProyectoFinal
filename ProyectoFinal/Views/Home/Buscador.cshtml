
@{
    ViewBag.Title = "Buscador";
}

<head>
    <link href="~/Content/css/agencyUsu.css" rel="stylesheet">
</head>

<body id="page-top">
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top" id="mainNav">
        <div class="container">
            <a class="navbar-brand js-scroll-trigger" href="/Home/Logout"><img src="~/Content/img/logos/logoblanco.png" alt="logo"></a>
            <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                Menu
                <i class="fas fa-bars"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav text-uppercase ml-auto">
                    @if (Session["Usuario"] != null && ViewBag.Rol.IdRol == 1)
                    {
                        <li class="nav-item">
                            <a class="nav-link js-scroll-trigger" href="/Usuario/IndexAdmin">@ViewBag.Rol.Nombre (perfil)</a>
                        </li>

                    }
                    @if (Session["Usuario"] != null && ViewBag.Rol.IdRol == 2)
                    {
                        <li class="nav-item">
                            <a class="nav-link js-scroll-trigger" href="/Usuario/IndexAgencia">@ViewBag.Rol.Nombre (perfil)</a>
                        </li>
                    }
                    @if (Session["Usuario"] != null && ViewBag.Rol.IdRol == 3)
                    {
                        <li class="nav-item">
                            <a class="nav-link js-scroll-trigger" href="/Usuario/IndexViajero">@ViewBag.Rol.Nombre (perfil)</a>
                        </li>

                    }
                    @if (Session["Usuario"] != null)
                    {
                        <li class="nav-item">
                            <a class="nav-link js-scroll-trigger" href="/Home/CerrarSesion">Salir</a>
                        </li>
                    }

                    @if (Session["Usuario"] == null)
                    {
                        <li class="nav-item">
                            <a class="nav-link js-scroll-trigger" href="/Home/Registracion">Registrate</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link js-scroll-trigger" href="/Home/Login">Login</a>
                        </li>
                    }


                </ul>
            </div>
        </div>
    </nav>

    <!-- BUSCAR

        style="background-image:url(../img/portfolio/fondoceleste.jpeg)";
        style="background-color:royalblue;"-->

    <section style="background-image:url(/Content/img/portfolio/fondoceleste.jpeg);" id="portfolio">

        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading text-uppercase" style="color:white;">Busca a tu compañero/a</h2>
                    <br>  <br>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 portfolio-item">
                    <a class="portfolio-link" href="/Viaje/BusquedaDestino">
                        <div class="portfolio-hover">
                            <div class="portfolio-hover-content">
                                <i class="fas fa-globe-americas fa-3x"></i>
                            </div>
                        </div>
                        <img class="img-fluid" src="~/Content/img/portfolio/destino_icon.jpg" alt="">
                    </a>
                    <div class="portfolio-caption">
                        <h4>Busca por Destino</h4>

                    </div>
                </div>
                <div class="col-md-6 portfolio-item">
                    <a class="portfolio-link" href="/Viaje/BusquedaVuelo">
                        <div class="portfolio-hover">
                            <div class="portfolio-hover-content">
                                <i class="fas fa-plane fa-3x"></i>
                            </div>
                        </div>
                        <img class="img-fluid" src="~/Content/img/portfolio/vuelo_icon.jpg" alt="">
                    </a>
                    <div class="portfolio-caption">
                        <h4>Busca por Vuelo</h4>

                    </div>
                </div>

            </div>
        </div>
    </section>

    <!-- Bootstrap core JavaScript -->
    <script src="~/Content/vendor/jquery/jquery.min.js"></script>
    <script src="~/Content/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- Plugin JavaScript -->
    <script src="~/Content/vendor/jquery-easing/jquery.easing.min.js"></script>
    <!-- Contact form JavaScript -->
    <script src="~/Content/js/jqBootstrapValidation.js"></script>
    <script src="~/Content/js/contact_me.js"></script>
    <!-- Custom scripts for this template -->
    <script src="~/Content/js/agency.min.js"></script>
</body>