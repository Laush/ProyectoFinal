    <!-- BUSCAR -->
    <section class="bg-light" id="portfolio">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading text-uppercase">Busc&aacute; a tu compañero/a</h2>
                    <h3 class="section-subheading text-muted">Encontr&aacute; todas las coincidencias</h3>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 portfolio-item">
                    <a class="portfolio-link" href="/Viaje/BusquedaDestino">
                        <div class="portfolio-hover">
                            <div class="portfolio-hover-content">
                                <i class="fas fa-globe-americas fa-3x"></i>
                            </div>
                        </div>
                        <img class="img-fluid" src="~/Content/img/portfolio/destino_icon.jpg" alt="">
                    </a>
                    <div class="portfolio-caption">
                        <h4>Busca por Destino</h4>
                    </div>
                </div>
                <div class="col-md-6 portfolio-item">
                    <a class="portfolio-link" href="/Viaje/BusquedaVuelo">
                        <div class="portfolio-hover">
                            <div class="portfolio-hover-content">
                                <i class="fas fa-plane fa-3x"></i>
                            </div>
                        </div>
                        <img class="img-fluid" src="~/Content/img/portfolio/vuelo_icon.jpg" alt="">
                    </a>
                    <div class="portfolio-caption">
                        <h4>Busca por Vuelo</h4>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- NOSOTROS -->
