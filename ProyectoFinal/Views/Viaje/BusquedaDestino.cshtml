
@{
    ViewBag.Title = "BusquedaDestino";
}

<head>

</head>

<body id="page-top">
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top" id="mainNav">
        <div class="container">
            <a class="navbar-brand js-scroll-trigger" href="/Home/Logout"><img src="~/Content/img/logos/logoblanco.png" alt="logo"></a>
            <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                Menu
                <i class="fas fa-bars"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav text-uppercase ml-auto">
                    <li class="nav-item">
                        <a class="nav-link js-scroll-trigger" href="/Home/Registracion">Registrate</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link js-scroll-trigger" href="/Home/Login">Login</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <!-- Header-->
    <header class="masthead">
        <div class="container">
            <div class="intro-text">
                <h2 class="section-heading text-uppercase">B&uacute;squeda por Destino</h2>
                <br>
                <div class="row">
                    <div class="col-lg-4">
                    </div>
                    <div class="col-lg-4">
                        <form method="post" action="/Viaje/BusquedaDestino">
                            <div class="form-group">
                                <input type="text" class="form-control" id="buscarDestino" name="buscarDestino" placeholder="Pa&iacute;s, Provincia, Ciudad">
                            </div>
                            <br>
                            <div class="form-group">
                                <input type="submit" class="btn btn-block btn-lg btn-primary" value="Buscar" />
                            </div>
                        </form>
                        <a class="nav-link js-scroll-trigger" href="/Viaje/BusquedaVuelo">Busca por Vuelo</a>
                        @if (Session["Usuario"] == null && ViewBag.ResultadoCantidad != null)
                        {
                        <div class="alert alert-light" role="alert">
                            <h6>@ViewBag.ResultadoCantidad<a href="/Home/RegistroViajero" class="alert-link"> Reg&iacute;strate</a>!</h6>
                        </div>                    
                        }
                    </div>
                </div>
            </div>
        </div>
    </header>
    <!-- Bootstrap core JavaScript -->
    <script src="~/Content/vendor/jquery/jquery.min.js"></script>
    <script src="~/Content/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- Plugin JavaScript -->
    <script src="~/Content/vendor/jquery-easing/jquery.easing.min.js"></script>
    <!-- Contact form JavaScript -->
    <script src="~/Content/js/jqBootstrapValidation.js"></script>
    <script src="~/Content/js/contact_me.js"></script>
    <!-- Custom scripts for this template -->
    <script src="~/Content/js/agency.min.js"></script>
</body>

