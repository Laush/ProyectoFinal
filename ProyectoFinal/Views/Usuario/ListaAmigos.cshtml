@using Genericas;
@{
    ViewBag.Title = "ListaAmigos";
}


<head>
    <link href="~/Content/css/agencyUsu.css" rel="stylesheet">
</head>

<body id="page-top">
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top" id="mainNav">
        <div class="container">
            <a class="navbar-brand js-scroll-trigger" href="/Home/Logout"><img src="~/Content/img/logos/logoblanco.png" alt="logo"></a>
            <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                Menu
                <i class="fas fa-bars"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav text-uppercase ml-auto">

                    <li class="nav-item">
                        <a class="nav-link js-scroll-trigger" href="/Usuario/IndexViajero">Perfil</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link js-scroll-trigger" href="/Home/Buscador">Buscar</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link js-scroll-trigger" href="#">Viajes</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link js-scroll-trigger" href="/Usuario/ListaAmigos">Mis amigos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link js-scroll-trigger" href="/Usuario/Notificaciones"><i class="fa fa-bell"></i></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link js-scroll-trigger" href="/Home/CerrarSesion"><i class="fa fa-power-off"></i></a>
                    </li>

                </ul>
            </div>
        </div>
    </nav>
    <!-- Header-->
    <header class="masthead">
        <div class="container">
            <div class="intro-text">
                <h2 class="section-heading text-uppercase">Lista de amigos</h2>
                <br>
                <div class="row">

                    <table class="table-responsive">
                        <thead>
                            <tr>
                                <th> </th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (AmistadUsuario u in ViewBag.ListaAmigos)
                            {

                                <tr>
                                    @if (u.IdResponsable == ViewBag.Usu.IdUsuario)
                                    {
                                        <td>
                                            Invitaste a @u.Usuario.NombreUsuario el @u.FechaCoincidencia
                                        </td>


                                    }
                                    else
                                    {
                                        <td>

                                            @u.Usuario1.NombreUsuario te invito el @u.FechaCoincidencia
                                        </td>

                                    }


                                    @*<td>@u.Usuario1.NombreUsuario</td>
                            <td>@u.Usuario.NombreUsuario</td>
                               <td>@u.Estado</td>*@
                                </tr>

                            }

                        </tbody>
                    </table>


                </div>


             
            </div>
        </div>
    </header>


    <!-- Bootstrap core JavaScript -->
    <script src="~/Content/vendor/jquery/jquery.min.js"></script>
    <script src="~/Content/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- Plugin JavaScript -->
    <script src="~/Content/vendor/jquery-easing/jquery.easing.min.js"></script>
    <!-- Contact form JavaScript -->
    <script src="~/Content/js/jqBootstrapValidation.js"></script>
    <script src="~/Content/js/contact_me.js"></script>
    <!-- Custom scripts for this template -->
    <script src="~/Content/js/agency.min.js"></script>
</body>




