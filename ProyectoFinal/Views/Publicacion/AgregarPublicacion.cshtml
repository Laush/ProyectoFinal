@using Genericas
@{
    ViewBag.Title = "AgregarPublicacion";
}
@model Publicacion
<head>

</head>

<body id="page-top">
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top" id="mainNav">
        <div class="container">
            <a class="navbar-brand js-scroll-trigger" href="/Home/Logout"><img src="~/Content/img/logos/logoblanco.png" alt="logo"></a>
            <ul class="navbar-nav text-uppercase ml-auto">

                @if (Session["Usuario"] != null && ViewBag.Rol.IdRol == 1)
                {
                    <li class="nav-item">
                        <a class="nav-link js-scroll-trigger" href="/Usuario/IndexAdmin">@ViewBag.Rol.Nombre (perfil)</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link js-scroll-trigger" href="/Home/CerrarSesion"><i class="fa fa-power-off"></i></a>
                    </li>

                }
                @if (Session["Usuario"] != null && ViewBag.Rol.IdRol == 2)
                {
                    <li class="nav-item">
                        <a class="nav-link js-scroll-trigger" href="/Usuario/IndexAgencia">@ViewBag.Rol.Nombre (perfil)</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link js-scroll-trigger" href="/Home/CerrarSesion"><i class="fa fa-power-off"></i></a>
                    </li>
                }
                @if (Session["Usuario"] != null && ViewBag.Rol.IdRol == 3)
                {
                    <li class="nav-item">
                        <a class="nav-link js-scroll-trigger" href="/Usuario/IndexViajero">@ViewBag.Rol.Nombre (perfil)</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link js-scroll-trigger" href="/Home/CerrarSesion"><i class="fa fa-power-off"></i></a>
                    </li>

                }
                @if (Session["Usuario"] != null && ViewBag.Rol.IdRol == 4)
                {
                    <li class="nav-item">
                        <a class="nav-link js-scroll-trigger" href="/Usuario/IndexGuia">@ViewBag.Rol.Nombre (perfil)</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link js-scroll-trigger" href="/Home/CerrarSesion"><i class="fa fa-power-off"></i></a>
                    </li>
                }

            </ul>
        </div>
    </nav>
    <!-- Header-->
    <header class="masthead">
        <div class="container">
            <div class="intro-text">
                <div class="intro-lead-in">Agregar publicacion</div>
                <form action="/Publicacion/AgregarPublicacion" method="Post">

                    <div class="row">
                        <div class="col-md-6">
                            @Html.HiddenFor(p => p.IdPublicacion, new { @class = "form-control" })
                            @Html.HiddenFor(p => p.IdUsuario, new { @class = "form-control" })
                            Titulo * @Html.TextBoxFor(p => p.Titulo, new { @class = "form-control", @required = "required" })
                            Descripcion * @Html.TextArea("Descripcion", "Maximo 200 caracteres", new { @class = "form-control", @required = "required" })
                        </div>
                        <div class="col-md-6">
                            FechaDesde * @Html.TextBoxFor(p => p.FechaDesde, new { @class = "form-control", @required = "required" })
                            FechaHasta  @Html.TextBoxFor(p => p.FechaHasta, new { @class = "form-control" })
                        </div>
                        <div class="col-md-12">
                            <br>
                            <input class="btn btn-primary my-2 my-sm-0" type="submit" value="Agregar Publicacion" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </header>



    <!-- Bootstrap core JavaScript -->
    <script src="~/Content/vendor/jquery/jquery.min.js"></script>
    <script src="~/Content/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- Plugin JavaScript -->
    <script src="~/Content/vendor/jquery-easing/jquery.easing.min.js"></script>
    <!-- Contact form JavaScript -->
    <script src="~/Content/js/jqBootstrapValidation.js"></script>
    <script src="~/Content/js/contact_me.js"></script>
    <!-- Custom scripts for this template -->
    <script src="~/Content/js/agency.min.js"></script>
</body>



