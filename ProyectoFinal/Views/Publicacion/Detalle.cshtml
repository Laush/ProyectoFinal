@using Genericas;
@{
    ViewBag.Title = "Detalle";
}
@model Publicacion
<head>
    <link href="~/Content/css/agencyUsu.css" rel="stylesheet">

    <style>

        .lib-header-seperator {
            height: 2px;
            width: 100%;
            background-color: #d9d9d9;
            margin: 7px 0 7px 0;
        }
   </style>

</head>

<body id="page-top">
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top" id="mainNav">
        <div class="container">
            <a class="navbar-brand js-scroll-trigger" href="/Home/Logout"><img src="~/Content/img/logos/logoblanco.png" alt="logo"></a>
            <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                Menu
                <i class="fas fa-bars"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav text-uppercase ml-auto">

                    @if (Session["Usuario"] == null)
                    {
                        <li class="nav-item">
                            <a class="nav-link js-scroll-trigger" href="/Home/Buscador">Buscar</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link js-scroll-trigger" href="/Home/Registracion">Registrate</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link js-scroll-trigger" href="/Home/Login">Login</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link js-scroll-trigger" href="#">@ViewBag.Rol.Nombre (perfil)</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link js-scroll-trigger" href="/Home/Buscador">Buscar</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link js-scroll-trigger" href="/Home/CerrarSesion"><i class="fa fa-power-off"></i></a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
    <!-- Header-->
    <header class="masthead">
        <div class="container">
            <div class="intro-text">


                <div class="row">
                    <div class="col-md-6">
                        @if (Model.UrlFoto == null)
                        {
                            <img src="~/Content/img/avatar/avatar_2x.png" class="img-fluid" alt="">
                        }
                        else
                        {
                            <img src="~/Content/img/avatar/@Model.UrlFoto" class="img-fluid" alt="">

                        }
                    </div>
                    <div class="col-md-6">
                        <h2 class="section-heading text-uppercase"> @Model.Titulo</h2>
                        <div class="lib-header-seperator"></div>
                        <br>
                        <p class="text-left">
                            @Model.Descripcion
                        </p>
                        <br><br>
                        <h4 class="text-left">
                            Desde: @Model.FechaDesde.ToString("dd/MM/yyyy")
                        </h4>
                        <br><br>
                            <h4 class="text-left">
                                Hasta:

                                @if (Model.FechaHasta != null)
                                {
                                    @Model.FechaHasta
                                }
                                else
                                {
                                    @: No especifica
                                }

                            </h4>
                        <br>

                    </div>

                </div>
            </div>
        </div>
    </header>


    <!-- Bootstrap core JavaScript -->
    <script src="~/Content/vendor/jquery/jquery.min.js"></script>
    <script src="~/Content/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- Plugin JavaScript -->
    <script src="~/Content/vendor/jquery-easing/jquery.easing.min.js"></script>
    <!-- Contact form JavaScript -->
    <script src="~/Content/js/jqBootstrapValidation.js"></script>
    <script src="~/Content/js/contact_me.js"></script>
    <!-- Custom scripts for this template -->
    <script src="~/Content/js/agency.min.js"></script>
</body>



